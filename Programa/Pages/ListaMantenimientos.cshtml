@page
@model ListaMantenimientosModel

<h1>Lista de Mantenimientos</h1>

<table class="table">

    <thead>
        <tr>
            <th>Id</th>
            <th>Equipo</th>
            <th>Descripci√≥n</th>
            <th>Refacciones</th>
            <th>Generado por</th>
            <th>Tipo</th>
            <th>Estatus</th>
        </tr>
    </thead>

    @if (Model._mantenimientos.Any())
    {
        @foreach (var m in Model._mantenimientos)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Equipo</td>
                <td>@m.Descripcion</td>
                <td>@m.Refacciones</td>
                <td>@m.GeneradoPor</td>
                <td>@m.Tipo</td>
                <td>@m.Estatus</td>
                

                <td>
                    <form asp-page-handler="Editar" method="post">
                        <input type="hidden" name="id" value="@m.Id" />

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                    </form>

                    <form asp-page-handler="Eliminar" method="post">
                        <input type="hidden" name="id" value="@m.Id" />

                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7">No hay registros de mantenimientos</td>
        </tr>
    }

</table>